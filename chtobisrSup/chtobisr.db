# Coherent OBIS laser remote

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

#### get ID ####

record(stringin, "$(P)ID")
{
    field(DESC, "OBIS Laser Remote ID string")
    field(SCAN, "10 second")
    field(DTYP, "stream")
    field(INP,  "@chtobisr.proto getID $(PORT)")
#	field(SIOL, "$(P)SIM:ID")
#   field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "MEDIUM")
    info(ALARM, "CHTOBISR")
}

#### set RESET ####

record(ao, "$(P)RESET")
{
    field(DESC, "OBIS Laser Remote RESET")
    field(DTYP, "stream")
    field(OUT,  "@chtobisr.proto setRESET $(PORT)")
#	field(SIOL, "$(P)SIM:ID")
#   field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "MEDIUM")
}

#### get interlock status ####

record(stringin, "$(P)INTERLOCK:STAT")
{
    field(DESC, "OBIS Laser Remote Interlock Status")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@chtobisr.proto getINTERLOCK $(PORT)")
#	field(SIOL, "$(P)SIM:ID")
#   field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
}


#### get raw status code (Low Word) ####

record(mbbiDirect, "$(P)STAT:LOW")
{
    field(DESC, "OBIS Laser Remote Status - Low Word")
    field(DTYP, "stream")
    field(SCAN, "1 second")
    field(INP,  "@chtobisr.proto getSTATUS($(P)) $(PORT)")    
    # Fields that will be set: (1 = True, 0 = False)
    #
    # B0 = "laser fault"
    # B1 = "laser emission"
    # B2 = "laser ready"
    # B3 = "laser standby"
    # B4 = "cdrh delay"
    # B5 = "laser hardware fault"
    # B6 = "laser error"
    # B7 = "laser power calibration"
    # B8 = "laser warm up"
    # B9 = "laser noise"
    # BA = "external operating mode"
    # BB = "field calibration"
    # BC = "laser power voltage"
    # ...
	info(INTEREST, "HIGH")
	info(archive, "VAL")
} 

#### get raw status code (High Word) ####

record(mbbiDirect, "$(P)STAT:HIGH")
{
    field(DESC, "OBIS Laser Remote Status - High Word")
