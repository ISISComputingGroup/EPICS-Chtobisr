    field(INP,  "@chtobisr.proto getFAULT($(P)) $(PORT)")    
    # Fields that will be set: (1 = True, 0 = False)
    #
    # B0 = "base plate temp fault"
    # B1 = "diode temp fault"
    # B2 = "internal temp fault"
    # B3 = "laser power supply fault"
    # B4 = "i2c error"
    # B5 = "over current"
    # B6 = "laser checksum error"
    # B7 = "checksum recovery"
    # B8 = "buffer overflow"
    # B9 = "warm up limit fault"
    # BA = "tec driver error"
    # BB = "ccb error"
    # BC = "diode temp limit error"
    # BD = "laser ready fault"
    # BE = "photodiode fault"
    # BF = "fatal fault"
    info(INTEREST, "HIGH")
	info(archive, "VAL")
} 

